import unittest
from app import app

class TestStaffDashboard(unittest.TestCase):
    def setUp(self):
        app.config['TESTING'] = True
        app.secret_key = 'test_key'
        self.client = app.test_client()

    def login_as_staff(self):
        with self.client.session_transaction() as sess:
            sess['user'] = {'username': 'staffuser', 'role': 'staff'}

    def login_as_student(self):
        with self.client.session_transaction() as sess:
            sess['user'] = {'username': 'studentuser', 'role': 'student'}

    def test_staff_access(self):
        self.login_as_staff()
        response = self.client.get('/staff_dashboard')
        self.assertEqual(response.status_code, 200)
        self.assertIn(b'Staff Dashboard', response.data)

    def test_staff_restriction_for_non_staff(self):
        self.login_as_student()
        response = self.client.get('/staff_dashboard', follow_redirects=True)
        self.assertIn(b'Unauthorized access', response.data)

if __name__ == '__main__':
    unittest.main()
