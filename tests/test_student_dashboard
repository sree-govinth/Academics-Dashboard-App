import unittest
from app import app

class TestStudentDashboard(unittest.TestCase):
    def setUp(self):
        app.config['TESTING'] = True
        app.secret_key = 'test_key'
        self.client = app.test_client()

    def login_as_student(self):
        with self.client.session_transaction() as sess:
            sess['user'] = {'username': 'studentuser', 'role': 'student'}

    def login_as_admin(self):
        with self.client.session_transaction() as sess:
            sess['user'] = {'username': 'adminuser', 'role': 'admin'}

    def test_student_access(self):
        self.login_as_student()
        response = self.client.get('/student_dashboard')
        self.assertEqual(response.status_code, 200)
        self.assertIn(b'Student Dashboard', response.data)

    def test_student_restriction_for_non_student(self):
        self.login_as_admin()
        response = self.client.get('/student_dashboard', follow_redirects=True)
        self.assertIn(b'Unauthorized access', response.data)

if __name__ == '__main__':
    unittest.main()
